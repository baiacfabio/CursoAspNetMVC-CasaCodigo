        @Html.HiddenFor(model => model.PostID)

        <div class="editor-label">
            @Html.LabelFor(model => model.TituloPost)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TituloPost)
            @Html.ValidationMessageFor(model => model.TituloPost)
