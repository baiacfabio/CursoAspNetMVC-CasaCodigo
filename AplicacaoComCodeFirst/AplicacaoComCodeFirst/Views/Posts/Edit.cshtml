            @Html.EditorFor(model => model.ConteudoPost)
            @Html.ValidationMessageFor(model => model.ConteudoPost)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DataPostagem)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DataPostagem)
            @Html.ValidationMessageFor(model => model.DataPostagem)
        </div>

